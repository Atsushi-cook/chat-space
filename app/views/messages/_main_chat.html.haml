.main-chat
  .chat-main__group-info
    .chat-main__group-one
      = @group.name
    .chat-main__group-two
      - @group.users.each do |user|
        = user.name
    .chat-main__group-three
      = link_to edit_group_path(@group) , class: "contents_btn" do
        Edit
  .main-chat__second
    = render @messages

  .chat-main__message-info
    = form_for [@group, @message] do |f|
      .chat-main__message-parent
        = f.text_field :content, class: 'chat-main__message-type', placeholder: 'type a message' do
          .chat-main__message-pic
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', 'class': 'icon')
          = f.file_field :image, class: 'aaa'
      .chat-main__message-send
        = f.submit 'Send', class: 'contents_btn'